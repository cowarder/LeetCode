class Solution {
	public:
		string convert(string s, int numRows) {
			if (numRows == 1)return s;
			vector<string> a;
			for (int p = 0; p < numRows; p++)
				a.push_back("");
			int n = 2 * numRows - 2;
			for (int i = 0; i < s.length(); i++) {
				if ((i + 1) % n > numRows)
					a[2 * numRows - ((i + 1) % n) - 1] += s[i];
				else if (((i + 1) % n) <= numRows)
					a[i%n] += s[i];
			}
			string b;
			for (int j = 0; j < numRows; j++)
				b += a[j];
			return b;
		}
	};